@import '../colorScheme'

.root
  padding-top 50px
  margin auto
  margin-bottom 20px
  max-width 1000px
  position relative
  color $black

  .infoWrapper
    display flex
    width 100%

  .name
    margin-bottom 20px
    span
      font-size 1.1rem
      display block
      margin-bottom 10px
    input
      font-size 1.1rem
      padding 8px
      border 1px solid gray
      border-radius 25px 50%
      &:focus
        outline none

  .metaWrapper
    width 50%

  .save
    margin-top 20px
    width 50px
    height 30px
    font-size 1.1rem

  .desWrapper
    width 50%
    position relative
    text-align center
    textarea
      width 90%
      height 500px
      padding 10px
      font-size 1.2rem
      border-radius 10px
      border 1px solid gray
      &:focus
        outline none

