@import '../colorScheme'

.navigation
  position fixed
  height 50px
  width 100%
  z-index 10
  overflow hidden
  background white
  transition background .5s
  border-bottom 1px solid #ddd

  &.glass
    background rgba(255,255,255,0)
    border-bottom none
    a
      color white
    .nav
      li
        background rgba(255,255,255,0)

  a
    text-decoration none
    color $black

  .wrapper
    max-width 1200px
    height 50px
    margin auto
    display flex
    justify-content space-between

  .title
    align-self center
    color $red
    font-size 2rem
    cursor pointer

  .nav
    margin 0
    height 100%
    list-style-type none
    display flex

    li
      margin 0
      cursor pointer
      display flex
      position relative
      transition background .5s
      &:nth-child(1)
        .color
          background-color #3399ff
      &:nth-child(2)
        .color
          background-color #33ff00
      &:nth-child(3)
        .color
          background-color #ff3333
      &:hover
        .color
          transform scaleY(5)
        &:nth-child(1)
          background rgba(51, 153, 255, 0.1)
        &:nth-child(2)
          background rgba(51, 255, 0, 0.1)
        &:nth-child(3)
          background rgba(255, 51, 51, 0.1)
    a
      display flex
    .text
      padding 0 10px
      width 100px
      text-align center
      align-self center
    .color
      transition transform .5s
      position absolute
      width 100%
      height 2px
      bottom 0
      left 0


