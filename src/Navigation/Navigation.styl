@import '../colorScheme'

.navigation
  position fixed
  height 80px
  width 100%
  background-color $blue
  z-index 10

  .wrapper
    max-width 1200px
    height 80px
    margin auto
    display flex
    justify-content space-between

  .title
    align-self center
    color $red
    font-size 2rem
    cursor pointer

  .nav
    list-style-type none
    align-self center
    display flex
    color $white

    li
      margin 0 10px
      cursor pointer
