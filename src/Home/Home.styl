@import '../colorScheme'

.home
  perspective 300px
  height 100vh
  overflow-x hidden
  overflow-y auto

  .group
    position relative
    height 100vh
    transform-style preserve-3d
    z-index 5
    &.front
      z-index 10
      background-color white

  .layer
    position absolute
    top 0
    right 0
    bottom 0
    left 0

    &.base
      transform translateZ(0)
      z-index 4
      div
        color white
        text-align center
        font-size 2rem
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
    &.back
      background-size cover
      background-attachment fixed
      background-position 50% 50%, 50% 50%
      background-repeat no-repeat, no-repeat
      transform translateZ(-300px) scale(2)
      z-index 3
      &.burger
        background-image url('../assets/img/burger2.png')
      &.pizza
        background-image url('../assets/img/pizza.png')
      &.pasta
        background-image url('../assets/img/pasta2.png')

